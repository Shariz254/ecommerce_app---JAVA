        android:roundIcon="@drawable/main_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.EcommerceApp">
        <activity
            android:name=".Activities.AdminMaintainProductsActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.SearchProductsActivity"
