<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroung_img"
    tools:context=".Activities.ConfirmOrderActivity">

    <RelativeLayout
        android:id="@+id/rel5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Details"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel5"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Confirm Shipment Details"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_margin="25dp"
            android:textAlignment="center"
            android:textStyle="italic|bold"/>

        <EditText
            android:id="@+id/shipment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:hint="Your Name.."
            android:background="@drawable/edit_txt_bg"/>

        <EditText
            android:id="@+id/shipment_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shipment_name"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:inputType="phone"
            android:hint="Your Phone Number.."
            android:background="@drawable/edit_txt_bg"/>

        <EditText
            android:id="@+id/shipment_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shipment_phone_number"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"

            android:hint="Your Address.."
            android:background="@drawable/edit_txt_bg"/>

        <EditText
            android:id="@+id/shipment_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shipment_address"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:hint="Your City.."
            android:background="@drawable/edit_txt_bg"/>
    </RelativeLayout>


    <Button
        android:id="@+id/confirm_order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:text="Confirm"
        android:textColor="#000"
        android:textSize="18sp"
        android:background="@drawable/buttons"/>

</RelativeLayout>