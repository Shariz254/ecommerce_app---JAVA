<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroung_img"
    tools:context=".Activities.AdminCategoryActivity">

    <RelativeLayout
        android:id="@+id/rel6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin Dashboard"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel6">

        <TextView
            android:id="@+id/slogan_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Add New Product"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textAlignment="center"/>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/slogan_category"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/t_shirts"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/t_shirt"/>

            <ImageView
                android:id="@+id/sports_tshirt"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/sports_shirt"/>

            <ImageView
                android:id="@+id/female_dresses"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/dresses"/>

            <ImageView
                android:id="@+id/sweaters"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/sweater"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/layout2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/glasses"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/glasses"/>

            <ImageView
                android:id="@+id/purses"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/purses"/>

            <ImageView
                android:id="@+id/hats"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/hats"/>

            <ImageView
                android:id="@+id/shoes"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/shoes"
                android:layout_marginStart="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/layout3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/headphones"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/headphones"/>

            <ImageView
                android:id="@+id/laptops"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/laptop"/>

            <ImageView
                android:id="@+id/watches"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:src="@drawable/watches"/>

            <ImageView
                android:id="@+id/mobile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/phone"
                android:layout_marginStart="16dp"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel7"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/maintain_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/check_orders_btn"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/buttons"
            android:text="Maintain Products"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/check_orders_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/admin_logout_btn"
            android:background="@drawable/buttons"
            android:text="Check New Orders"
            android:layout_margin="3dp"
            android:textColor="#000"
            android:textSize="15sp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/admin_logout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/buttons"
            android:text="LogOut"
            android:textColor="#000"
            android:textSize="15sp"
            android:textAllCaps="false" />
    </RelativeLayout>



</RelativeLayout>